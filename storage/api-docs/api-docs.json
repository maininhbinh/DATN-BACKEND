{
    "openapi": "3.0.0",
    "info": {
        "title": "Dự án tốt nghiệp",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "API Server"
        }
    ],
    "paths": {
        "/signup": {
            "post": {
                "tags": [
                    "User Authentication"
                ],
                "summary": "Đăng ký",
                "operationId": "c75c11220a101b686d3d348fb9dea796",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "confirm_password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "default": "your name"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "your_email@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "default": "Abc1234"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "default": "Abc1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "422": {
                        "description": "validate"
                    },
                    "500": {
                        "description": "server"
                    }
                }
            }
        },
        "/verifyOTP": {
            "post": {
                "tags": [
                    "User Authentication"
                ],
                "summary": "Verify OTP",
                "description": "This endpoint verifies an OTP sent to the user's email.",
                "operationId": "1ed17c148a5b19bfb989c09af4f9483f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "OTP",
                                    "email"
                                ],
                                "properties": {
                                    "OTP": {
                                        "description": "The OTP to verify.",
                                        "type": "string",
                                        "format": "digits",
                                        "example": "1234"
                                    },
                                    "email": {
                                        "description": "The email address associated with the OTP.",
                                        "type": "string",
                                        "format": "email",
                                        "example": "your_email@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP verified successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "OTP verified successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid OTP or email."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "An error occurred."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "description": "Enter JWT Bearer token **_only_**",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}